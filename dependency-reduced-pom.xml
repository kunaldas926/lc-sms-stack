<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.lmig.libertyconnect</groupId>
  <artifactId>sms-stack</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>3.0.0</version>
        <configuration>
          <mainClass>com.lmig.libertyconnect.sms.stack.LcSmsStackApp</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.4</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.lmig.libertyconnect.sms.stack.LcSmsStackApp</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.diffplug.spotless</groupId>
        <artifactId>spotless-maven-plugin</artifactId>
        <version>${spotless.version}</version>
        <executions>
          <execution>
            <phase>${formatter.phase}</phase>
            <goals>
              <goal>${formatter.goal}</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <java>
            <includes>
              <include>${spotless.srcIncludes}</include>
              <include>${spotless.testIncludes}</include>
            </includes>
            <googleJavaFormat>
              <version>${spotless.javaformat.version}</version>
              <style>${spotless.javaformat.style}</style>
            </googleJavaFormat>
          </java>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>local</id>
      <properties>
        <formatter.goal>apply</formatter.goal>
        <formatter.phase>compile</formatter.phase>
        <skip.generate.openapi>false</skip.generate.openapi>
      </properties>
    </profile>
    <profile>
      <id>ci</id>
      <properties>
        <formatter.goal>check</formatter.goal>
        <formatter.phase>compile</formatter.phase>
        <skip.generate.openapi>true</skip.generate.openapi>
      </properties>
    </profile>
  </profiles>
  <dependencies>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-api</artifactId>
      <version>5.7.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
        <exclusion>
          <artifactId>opentest4j</artifactId>
          <groupId>org.opentest4j</groupId>
        </exclusion>
        <exclusion>
          <artifactId>junit-platform-commons</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.junit.jupiter</groupId>
      <artifactId>junit-jupiter-engine</artifactId>
      <version>5.7.1</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>junit-platform-engine</artifactId>
          <groupId>org.junit.platform</groupId>
        </exclusion>
        <exclusion>
          <artifactId>apiguardian-api</artifactId>
          <groupId>org.apiguardian</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <spotless.srcIncludes>src/main/java/**/*.java</spotless.srcIncludes>
    <spotless.version>2.21.0</spotless.version>
    <maven.compiler.source>1.8</maven.compiler.source>
    <lombok.version>1.18.8</lombok.version>
    <cdk.version>1.152.0</cdk.version>
    <maven.compiler.target>1.8</maven.compiler.target>
    <spotless.testIncludes>src/test/java/**/*.java</spotless.testIncludes>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <jcommander.version>1.78</jcommander.version>
    <spotless.javaformat.style>AOSP</spotless.javaformat.style>
    <junit.version>5.7.1</junit.version>
    <spotless.javaformat.version>1.3</spotless.javaformat.version>
  </properties>
</project>
